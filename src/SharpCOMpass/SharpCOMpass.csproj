<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.0</Version>
    <Authors>moody</Authors>
    <Company>Pidgeons</Company>
    <Description>COM Security Analysis Tool</Description>
    <PackageProjectUrl>https://github.com/professor-moody/SharpCOMpass</PackageProjectUrl>
    <RepositoryUrl>https://github.com/professor-moody/SharpCOMpass</RepositoryUrl>
    <PackageTags>security;windows;com;analysis</PackageTags>
    
    <!-- Publishing settings -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <UseAppHost>true</UseAppHost>
  </PropertyGroup>
</Project>